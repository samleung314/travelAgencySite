<body>
    <div class = "center" style="background-color: rgb(94, 123, 184); text-align: center; line-height:2">
        Departure city <input type ="text" id = "departure">
        <br>Destination city <input type ="text" id = "destination">
        <br>Number of passengers <input type ="text" id = "num">
        <br>Date of departure <input type ="text" id = "date">
        <br>
        <button onclick="submit()">Submit</button>
    </div>

</body>

<script>
function submit() {
    var dep = document.getElementById("departure").value;
    var dst = document.getElementById("destination").value;
    var num = document.getElementById("num").value;
    var date = document.getElementById("date").value;
    document.getElementById("lgnBtn").textContent = dep + dst + num + date;
    document.getElementById("lgnBtn").style.color = "white";
    document.getElementById("lgnBtn").style.padding = "14px";
}
</script>
